{
  "app-id":"io.github.dfandrich.gpscorrelate",
  "runtime":"org.freedesktop.Platform",
  "runtime-version":"20.08",
  "sdk":"org.freedesktop.Sdk",
  "command":"gpscorrelate-gui",
  "finish-args":[
    "--socket=fallback-x11",
    "--socket=wayland",
	"--filesystem=home",
    /* Needed for gvfs to work */
    "--talk-name=org.gtk.vfs", "--talk-name=org.gtk.vfs.*"
  ],
  "modules":[
   {
            "name": "exiv2",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=Release",
                "-DEXIV2_ENABLE_LENSDATA=off",
                "-DEXIV2_BUILD_SAMPLES=off",
                "-DEXIV2_ENABLE_LENSDATA=off"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/cmake",
                "/lib/pkgconfig",
                "/lib/*.a",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://www.exiv2.org/builds/exiv2-0.27.3-Source.tar.gz",
                    "sha256": "a79f5613812aa21755d578a297874fb59a85101e793edc64ec2c6bd994e3e778"
                }]
    },
	{
            "name": "gpscorrelate-gui",
            "buildsystem": "simple",
            "build-commands": [
				/* gettext catalogues are dropped if stored in the standard location, so move them */
                "make -j${FLATPAK_BUILDER_N_JOBS} prefix=${FLATPAK_DEST} localedir=${FLATPAK_DEST}/share/gpscorrelate/locale CFLAGS=\"${CFLAGS} -DENABLE_NLS=1\"",
                "make prefix=${FLATPAK_DEST} localedir=${FLATPAK_DEST}/share/gpscorrelate/locale install install-po install-desktop-file",
                "make check",
                "mv ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/gpscorrelate-gui.svg ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/io.github.dfandrich.gpscorrelate.svg",
                "mv ${FLATPAK_DEST}/share/applications/gpscorrelate.desktop ${FLATPAK_DEST}/share/applications/io.github.dfandrich.gpscorrelate.desktop",
                "sed -i 's/Icon=gpscorrelate-gui/Icon=io.github.dfandrich.gpscorrelate/' ${FLATPAK_DEST}/share/applications/io.github.dfandrich.gpscorrelate.desktop"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/dfandrich/gpscorrelate/releases/download/2.0/gpscorrelate-2.0.tar.xz",
                    "sha256": "3fba8ad72b9b42dfc870a04d1207357c2a6c28842b1ede51e28b30a93b48debe"
                }
            ],
            "cleanup": [
                "/share/man"
            ]
        }
  ]
}
